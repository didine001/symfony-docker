{% extends 'base.html.twig' %}


{% block stylesheets %}
	<style>
		body {
			font-family: 'Poppins', sans-serif;
			background-color: #141332;
			color: white;
			margin: 0;
			padding: 0;
		}

		.article {
			background-color: #1f1e6d;
			border-radius: 10px;
			margin: 20px auto;
			padding: 20px;
			max-width: 600px;
		}

		.commentaires {
			background-color: #1f1e4d;
			border-radius: 10px;
			margin: 20px auto;
			padding: 20px;
			max-width: 600px;
		}
		.commentaires h1 {
			font-size: 24px;
			margin: 0;
		}

		.commentaires h3 {
			font-size: 18px;
			margin-top: 5px;
			margin-bottom: 10px;
		}

		.commentaires p {
			font-size: 14px;
			margin: 0;
		}
		.bt .article h1 {
			font-size: 24px;
			margin: 0;
		}

		.article h3 {
			font-size: 18px;
			margin-top: 5px;
			margin-bottom: 10px;
		}

		.article p {
			font-size: 14px;
			margin: 0;
		}
		.btn {
			background-color: #6d39ed;
			padding: 10px 20px;
			border-radius: 2px;
			width: fit-content;
			margin: 10px auto;
			justify-content: left;
			align-items: left;
		}

		.btn:hover {
			background-color: #341aa2;
			color: white;
		}
	</style>
{% endblock %}
{% block body %}
	<a href="{{ path('app_accueil') }}" class="btn btn-primary info">Revenir</a>
	<div class="container">
		<div class="article">
			<h1>{{ article.Title }}</h1>
			<p>
				{{article.Description}}
			</p>
			<p>{{ article.Auteur }}</p>
			<p>{{ article.Date | date('d-m-Y') }}</p>
		</div>
	</div>


	<div class="container">
		<div class="commentaires">
			{% for comm in comms %}
				<h3>{{ comm.Title }}</h3>
				<p>{{comm.Description}}</p>
				<p>{{comm.Auteur}}</p>
			{% endfor %}
		</div>
	</div>
{% endblock %}
